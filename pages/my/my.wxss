page{
  background-color: #f5f5f5;
}
.container{
  height: 100%;
  min-height: 100%;
  overflow: hidden;
  overflow-y: hidden;
  margin-bottom: 25px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

.userinfo {
  background-color:#FFD700;
  width:100%;
  height:140px;
  align-items:center;
  background-size:100% 115%;
}

.userinfo-avatar {
	width:20%;
  border-radius:50%;
  float:left;
  margin-top:30px;
  margin-left:15px;
}
.iser-info-box{
  float:left;
  width:70%;
  margin-top:40px;
  margin-left:10px;
}
.userinfo-nickname {
  color:#FFF;
  display:block;
  font-size:32rpx;
  padding-bottom:3px;
}
.userinfo-score{
  font-size:24rpx;
  margin-top:5px;
  background-color:#b3a078;
  color:#fff;
  padding:1px 5px;
  border-radius:2px;
}
.userinfo-item{
  width:100%;
  background-size:16rpx auto;
  border-bottom:1px solid #fbfbfb;
  line-height:100rpx;
  padding-left:30px;
  background-color:#fff;
  font-size:30rpx;
  color:#333;
}
.userinfo-item image{
  width:20px;
  height:20px;
  margin:0 5px -4px 0;
}
.userinfo-item navigator{
  display:inline-block;
  width: 90%;
}

.userinfo-item view{
  display:inline-block;
  width: 90%;
}

.userinfo-item view image{
  width:20px;
  height:20px;
  float:right;
  margin-top:20px;
  margin-right:15px;
  position:absolute;
  right:0;
}

.userinfo-item navigator image{
  width:20px;
  height:20px;
  float:right;
  margin-top:20px;
  margin-right:15px;
  position:absolute;
  right:0;
}
.user-cart-list{
  background-color:#fff;
  width:100%;
  text-align:center;
  margin-bottom:10px;
}
.cart-list{
  display:inline-block;
  width:25%;
  color: #666;
  font-size:26rpx;
  margin-top:10px;
  margin-bottom:10px;
  position: relative;
}
.red-dot{
  border:4px solid #b5272d;
  border-radius:50%;
  width:0;
  height:0;
  position:absolute;
  right:20%;
}
.cart-list image{
  width:25%;
  display:block;
  margin:0 auto;
  padding-bottom:5px;
}
.userinfo-item navigator text{
  font-size:24rpx;
  color:#999;
}
.about{
    width: 100%;
    background-color:#FFF;
    background-size: 16rpx auto,750rpx auto;
    margin: 20rpx 0; 
    height: 80rpx;
    line-height: 80rpx;
    padding-left: 100rpx;
}
.version {
  background-color:#FFF;
  width:100%;
  height: 40rpx;
	line-height: 40rpx;
	font-size: 24rpx;
	text-align: center;  
  padding: 40rpx;
}