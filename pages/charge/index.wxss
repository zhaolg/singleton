.input-box{
	background-color: #fff;
	margin: 0 auto;
	padding: 20rpx 0;
	border-radius: 10rpx;
	width: 90%;

}
.input-box input{
	width: 100%;
	height: 100%;
	text-align: center;
}

.title{
	background-color: #f2f2f2;
	padding: 30rpx 0 30rpx 50rpx;
	font-size: 28rpx;
	color: #000;
}
.tapbar{
	display: flex;
	align-items: center;
	justify-content: space-between;
	background-color: #fff;
	padding: 40rpx;
}
.btn-charge{
	width: 90%;
	background-color: #b9dd08;
	margin: 40rpx auto 30rpx;
	text-align: center;
}

