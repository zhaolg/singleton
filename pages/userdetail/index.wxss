.custom-zan-col {
  line-height: 130px;
  text-align: center;
  font-size: 12px;
  color: #fff;
}

.custom-zan-col:nth-child(even) {
  background-color: #66c6f2;
}

.swiper_box {
  width:100%;
  margin:0 auto;
  position:relative;
  height:260px;
  box-shadow:0px 5px 15px 0px #cfc9ca;
  margin-top:0px;
  border-radius:10px;
}
.swiper-box{
  width:260px;
  margin:0 auto;
  position:relative;
  height:370px;
  box-shadow:0px 5px 15px 0px #cfc9ca;
  margin-top:5px;
  border-radius:10px;
}
.swiper-box image{
  width:100%;
  height:260px;
  background-color:#f5f5f5;
  border-top-left-radius:5px;
  border-top-right-radius:5px;
}