.all-style{
  margin-top:30px
}
.HotName{
  font-size:70rpx;
  margin-left:20px;
  color:#293539;
  font-weight:300;
  position: relative;
}
.HotName text{
  width:7px;
  height:7px;
  position:absolute;
  border:2px solid #a78845;
  border-radius:50%;
}
.HotMark{
  margin-left:25px;
  color:#293539;
  font-size:36rpx;
  margin-top:5px;
  font-weight:300;
}
.HotSwiper swiper{
  width: 100%;
  height: 450px;
}
.swiper-box{
  width:260px;
  margin:0 auto;
  position:relative;
  height:370px;
  box-shadow:0px 5px 15px 0px #cfc9ca;
  margin-top:20px;
  border-radius:10px;
}
.swiper-box image{
  width:100%;
  height:260px;
  background-color:#f5f5f5;
  border-top-left-radius:5px;
  border-top-right-radius:5px;
}
.swiper-box-info{
  position:absolute;
  width:100%;
  height:110px;
  top:260px;
  background-color:#fff;
  border-bottom-right-radius:5px;
  border-bottom-left-radius:5px;
}
.swiper-box-info .box-info-name{
  width:90%;
  margin:0 auto;
  margin-top:5px;
  font-size:32rpx;
  color:#293539;
  white-space:nowrap;
  overflow:hidden;
  text-overflow:ellipsis;
}
.swiper-box-info .box-info-money{
  float:left;
  margin-top:40px;
  margin-left:5px;
  font-size:25rpx;
  color:#a78845;
}
.swiper-box-info .box-coupons-btn{
  float:right;
  margin-top:35px;
  background-color:#f5f5f5;
  color:#6a7275;
  font-size:28rpx;
  font-weight:300;
  width:90px;
  height:30px;
  line-height:30px;
  text-align:center;
  margin-right:15px;
  border-radius:6rpx;
}
.swiper-box-info .box-info-money text{
  font-size:30rpx;
  padding-right:3px;
}
.box-info-icon-box{
  float:right;
  margin-right:10px;
  margin-top:30px;
}
.box-info-icon-box .box-info-icon{
  display:inline-block;
  width:40px;
  height:40px;
  background-color:#f5f5f5;
  margin-left:10px;
  border-radius:50%;
  text-align:center;
}
.box-info-icon-box .box-info-icon image{
  width:25px;
  height:25px;
  background-color:rgba(0,0,0,0);
  margin-top:8px;
}